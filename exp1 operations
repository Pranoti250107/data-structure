#include <stdio.h>
int main()
{
    int i, a[5], b[5], c[10];
    int n = 5, ch, pos, value, sum = 0, sub = 0;
    char x;
    do {
        printf("\n1. create");
        printf("\n2. display");
        printf("\n3. sum");
        printf("\n4. subtraction");
        printf("\n5. insertion");
        printf("\n6. deletion");
        printf("\n7. updating");
        printf("\n8. merging");
        printf("\nEnter your choice: ");
        scanf("%d", &ch);
        switch (ch) {
        case 1:
            printf("Enter array elements:\n");
            for (i = 0; i < 5; i++) {
                scanf("%d", &a[i]);
            }
            break;
        case 2:
            printf("Array is: ");
            for (i = 0; i < 5; i++) {
                printf("%d ", a[i]);
            }
            break;
        case 3:
            sum = 0;
            for (i = 0; i < 5; i++) {
                sum = sum + a[i];
            }
            printf("\nAddition is: %d", sum);
            break;
        case 4:
            sub = a[0];
            for (i = 1; i < 5; i++) {
                sub = sub - a[i];
            }
            printf("\nSubtraction is: %d", sub);
            break;
        case 5:
            printf("Enter position and value: ");
            scanf("%d %d", &pos, &value);
            for (i = n; i > pos; i--) {
                a[i] = a[i - 1];
            }
            a[pos] = value;
            printf("After insertion: ");
            for (i = 0; i < 5; i++) {
                printf("%d ", a[i]);
            }
            break;
        case 6:
            printf("Enter position to delete: ");
            scanf("%d", &pos);

            for (i = pos; i < n - 1; i++) {
                a[i] = a[i + 1];
            }
            printf("After deletion: ");
            for (i = 0; i < 5; i++) {
                printf("%d ", a[i]);
            }
            break;
        case 7:
            printf("Enter index and new value: ");
            scanf("%d %d", &pos, &value);
            a[pos] = value;
            printf("After updating: ");
            for (i = 0; i < 5; i++) {
                printf("%d ", a[i]);
            }
            break;
        case 8:
            printf("Enter five elements: ");
            for (i = 0; i < 5; i++) {
                scanf("%d", &b[i]);
            }
            for (i = 0; i < n; i++) {
                c[i] = a[i];
            }
            for (i = 0; i < 5; i++) {
                c[n + i] = b[i];
            }
            printf("Merged Array: ");
            for (i = 0; i < n + 5; i++) {
                printf("%d ", c[i]);
            }
            break;
        }
        printf("\nDo you want to continue (y/n): ");
        scanf(" %c", &x);
    } while (x == 'y' || x == 'Y');
    return 0;
}
